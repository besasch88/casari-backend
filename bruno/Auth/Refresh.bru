meta {
  name: Refresh
  type: http
  seq: 3
}

post {
  url: http://127.0.0.1:8001/api/v1/auth/refresh
  body: json
  auth: inherit
}

body:json {
  {
    "refreshToken": "{{refreshToken}}"
  }
}

script:post-response {
  bru.setVar("accessToken", res.body?.item?.accessToken);
  bru.setVar("refreshToken", res.body?.item?.refreshToken);
  
}

settings {
  encodeUrl: true
  timeout: 0
}
